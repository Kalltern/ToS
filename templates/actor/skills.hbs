<section
  class="tab skills {{tab.cssClass}}"
  data-group="primary"
  data-tab="skills"
>
  <section class="skills-container">

    {{! Left Column }}
    <div class="skills-column">
      <h3>{{localize "TOS.Actor.Character.stats.health.value.label"}}/h3>
      {{#each system.skills as |skill key|}}
        {{#if (eq skill.id 0)}}
          <div class="skill-entry flexrow">
            <label
              class="resource-label rollable flexlarge align-left"
              data-action="roll"
              data-roll="{{skill.rating}}-1d100"
              data-roll-type="skill"
              data-label="{{key}}"
            >
              {{key}}
            </label>
            <span>{{skill.rating}}</span>
          </div>
        {{/if}}
